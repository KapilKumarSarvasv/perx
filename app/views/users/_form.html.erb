<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h3><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h3>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :tier, value: User::TIER[:standard] if user.points == 0 || user.points.nil? %>

  <div class="my-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="my-2">
    <%= form.label :dob, style: "display: block" %>
    <%= form.datetime_field :dob %>
  </div>

  <div>
    <%= form.submit class:"btn-primary" %>
  </div>
<% end %>
